document.addEventListener('DOMContentLoaded', function() {
  // Function to hide the tooltip
  function hideTooltip(tooltipText) {
    tooltipText.style.visibility = 'hidden';
    tooltipText.style.opacity = '0';
  }

  // Function to show the tooltip
  function showTooltip(tooltipText) {
    tooltipText.style.visibility = 'visible';
    tooltipText.style.opacity = '1';
  }

  // Get all tooltip containers
  const tooltipContainers = document.querySelectorAll('.tooltip');

  tooltipContainers.forEach(container => {
    const tooltipText = container.querySelector('.tooltiptext');
    const buttons = container.querySelectorAll('.btns .edit-button, .btns .delete-button');

    // Add event listeners to the tooltip container
    container.addEventListener('mouseenter', () => showTooltip(tooltipText));
    container.addEventListener('mouseleave', () => hideTooltip(tooltipText));

    // Add event listeners to buttons inside .btns
    buttons.forEach(button => {
      button.addEventListener('mouseenter', () => hideTooltip(tooltipText));
      button.addEventListener('mouseleave', () => showTooltip(tooltipText));
    });
  });
});

</script>
